<script>
// Load agent profile component
document.addEventListener('DOMContentLoaded', function() {
    console.log('Loading agent profile...');
    
    // Try multiple paths
    const paths = [
        'components/agent-profile.html',
        'www/components/agent-profile.html',
        '/components/agent-profile.html'
    ];
    
    async function loadAgentProfile() {
        for (const path of paths) {
            try {
                const response = await fetch(path);
                if (response.ok) {
                    const html = await response.text();
                    console.log('Agent profile loaded from:', path);
                    document.getElementById('agent-profile-container').innerHTML = html;
                    
                    // Execute any scripts in the loaded content
                    const scripts = document.getElementById('agent-profile-container').getElementsByTagName('script');
                    for (let script of scripts) {
                        eval(script.innerHTML);
                    }
                    return;
                }
            } catch (error) {
                console.log('Failed to load from:', path);
            }
        }
        console.error('Could not load agent profile from any path');
    }
    
    loadAgentProfile();
});
</script>