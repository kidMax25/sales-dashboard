<script>
// Agent data
const agents = {
    'agent1': {
        name: 'Nancy Davolio',
        title: 'Sales Representative',
        age: 32,
        region: 'North America',
        sales: '$245,890',
        orders: 156,
        avatar: 'https://i.pravatar.cc/150?img=1'
    },
    'agent2': {
        name: 'Andrew Fuller',
        title: 'Vice President Sales',
        age: 45,
        region: 'Europe',
        sales: '$412,560',
        orders: 203,
        avatar: 'https://i.pravatar.cc/150?img=12'
    },
    'agent3': {
        name: 'Janet Leverling',
        title: 'Sales Representative',
        age: 28,
        region: 'Asia',
        sales: '$189,320',
        orders: 127,
        avatar: 'https://i.pravatar.cc/150?img=5'
    },
    'agent4': {
        name: 'Margaret Peacock',
        title: 'Sales Representative',
        age: 38,
        region: 'South America',
        sales: '$305,780',
        orders: 184,
        avatar: 'https://i.pravatar.cc/150?img=9'
    }
};

// Update agent profile
function updateAgentProfile(agentId) {
    const agent = agents[agentId] || agents['agent1'];
    
    document.getElementById('agent-avatar').src = agent.avatar;
    document.getElementById('agent-name').textContent = agent.name;
    document.getElementById('agent-title').textContent = agent.title;
    document.getElementById('agent-age').textContent = agent.age;
    document.getElementById('agent-region').textContent = agent.region;
    document.getElementById('agent-sales').textContent = agent.sales;
    document.getElementById('agent-orders').textContent = agent.orders;
}

// Listen for agent filter changes
document.addEventListener('DOMContentLoaded', function() {
    const agentFilter = document.getElementById('agent_filter');
    if (agentFilter) {
        agentFilter.addEventListener('change', function() {
            updateAgentProfile(this.value || 'agent1');
        });
    }
});
</script>